<UserControl x:Class="JTSA.Panels.AppArrangePanel"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d"
            Background="#FF404040">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FF404040" >
            <Button Name="RegisterAppAllSetButton" Content="アプリ一括配置" Margin="4" Height="40" Click="RegisterAppAllSetButton_Click"></Button>
            <Button Name="RegisterAllAppStartButton" Content="アプリ一括起動" Margin="4" Height="40" Click="RegisterAllAppStartButton_Click" ></Button>
            <Button Name="RegisterAllAppStopButton" Content="アプリ一括停止" Margin="4" Height="40" Click="RegisterAllAppStopButton_Click" ></Button>
            <Button Name="RegisterAppButton" Content="アプリ選択（未実装）" Margin="4" Height="40" Click="RegisterAppButton_Click" ></Button>
        </StackPanel>

        <Grid Grid.Column="1" Margin="8, 0, 8, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="登録中アプリ一覧" Foreground="White" FontSize="14"></TextBlock>
                    <TextBlock Text="※クリックで停止アプリは起動、起動アプリは登録位置に移動" Foreground="White" FontSize="12"></TextBlock>
                    <TextBlock Text="※管理者権限でないと動かないものもあるので注意" Foreground="White" FontSize="12"></TextBlock>
                </StackPanel>
            </Grid>

            <ListBox Grid.Row="1" ItemsSource="{Binding RegistAppList}" d:ItemsSource="{d:SampleData ItemCount=3}" Grid.Column="1" Background="#FF404040" 
                    x:Name="RegistAppListBox" Height="Auto" Width="Auto" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionChanged="RegistAppListBox_SelectionChanged" PreviewMouseDown="RegistAppListBox_PreviewMouseDown">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Margin="8, 0, 8, 0">
                                <Grid >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="【 " Foreground="White" FontSize="16" ></TextBlock>
                                        <TextBlock Text="{Binding Status}" Grid.Column="0" Width="Auto" Foreground="White" FontSize="16" ></TextBlock>
                                        <TextBlock Text=" 】 " Foreground="White" FontSize="16" ></TextBlock>
                                    </StackPanel>
                                    <TextBlock Text="{Binding ProcessName}" Grid.Column="1" Width="Auto" Foreground="White" FontSize="16" TextWrapping="Wrap"></TextBlock>
                                </Grid>
                                <TextBlock Text="{Binding WindowTitle}" Width="Auto" Foreground="White" FontSize="12" TextWrapping="Wrap"></TextBlock>

                                <Grid Margin="0" Height="Auto">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="8, 0, 0, 0">

                                        <Grid Height="Auto">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <TextBlock Text="X：" Width="Auto" Foreground="White" FontSize="12"></TextBlock>
                                                <TextBlock Text="{Binding X}" Width="Auto" Foreground="White" FontSize="12" TextWrapping="Wrap"></TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="Y：" Width="Auto" Foreground="White" FontSize="12"></TextBlock>
                                                <TextBlock Text="{Binding Y}" Width="Auto" Foreground="White" FontSize="12" TextWrapping="Wrap"></TextBlock>
                                            </StackPanel>
                                        </Grid>

                                        <Grid Height="Auto">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <TextBlock Text="Width：" Width="Auto" Foreground="White" FontSize="12"></TextBlock>
                                                <TextBlock Text="{Binding Width}" Width="Auto" Foreground="White" FontSize="12"></TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="Height：" Width="Auto" Foreground="White" FontSize="12"></TextBlock>
                                                <TextBlock Text="{Binding Height}" Width="Auto" Foreground="White" FontSize="12"></TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0" Height="Auto">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="RegistAppStopButton" Grid.Column="0" Content="停止" Width="64" Height="20" Margin="8, 0, 0, 4" VerticalAlignment="Bottom" HorizontalAlignment="Left"  Click="RegistAppStopButton_Click"/>
                                    <Button x:Name="RegistAppExePathResetButton" Grid.Column="1" Content="Path設定" Width="64" Height="20" Margin="8, 0, 0, 4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="RegistAppExePathResetButton_Click"/>
                                    <Button x:Name="RegistAppResetButton" Grid.Column="2" Content="再設定" Width="64" Height="20" Margin="8, 0, 0, 4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="RegistAppResetButton_Click"/>
                                    <Button x:Name="RegistAppDeleteButton" Grid.Column="3" Content="削除" Width="64" Height="20" Margin="8, 0, 0, 4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="RegistAppDeleteButton_Click"/>
                                </Grid>
                            </StackPanel>

                            <Border Width="Auto" Height="2" Background="White"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>


        <Grid Grid.Column="2" Margin="8, 0, 8, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                    <TextBlock Text="起動中アプリ一覧" Foreground="White" FontSize="14"></TextBlock>
                    <TextBlock Text="※クリックで左の登録アプリに登録" Foreground="White" FontSize="12"></TextBlock>
                </StackPanel>

                <Button Grid.Column="1" Name="RunAppButton" Content="アプリ読込" HorizontalAlignment="Right" Width="80" Margin="4" Height="24" Click="RunAppButton_Click" ></Button>

            </Grid>

            <ListBox Grid.Row="1"  ItemsSource="{Binding RunAppList}" d:ItemsSource="{d:SampleData ItemCount=3}" Background="#FF404040" 
                x:Name="RunAppListBox" Height="Auto" Width="Auto" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="RunAppListBox_SelectionChanged" PreviewMouseDown="RunAppListBox_PreviewMouseDown">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Margin="8, 0, 8, 0">
                                <TextBlock Text="{Binding ProcessName}" Grid.Column="0" Width="Auto" Foreground="White" FontSize="16" TextWrapping="Wrap"></TextBlock>

                                <Grid Margin="0" Height="Auto">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding WindowTitle}" Grid.Column="0" Width="Auto" Foreground="White" FontSize="12" TextWrapping="Wrap"></TextBlock>
                                        <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="8, 0, 0, 0">
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <Border Width="Auto" Height="2" Background="White"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
