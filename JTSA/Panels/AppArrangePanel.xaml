<UserControl x:Class="JTSA.Panels.AppArrangePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             Background="#FF404040" Height="700" Width="970">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FF404040" >
            <Button Name="RunAppButton" Content="アプリ読込" Click="RunAppButton_Click" ></Button>
            <Button Name="RegisterAppButton" Content="アプリ選択" Click="RegisterAppButton_Click" ></Button>
            <Button Content="全配置"></Button>
        </StackPanel>

        <ListBox ItemsSource="{Binding RegistAppList}" Grid.Column="1" Background="#FF404040" 
                x:Name="RegistAppListBox" Height="Auto" Width="Auto" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionChanged="RegistAppListBox_SelectionChanged">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Margin="8, 0, 8, 0">
                            <TextBlock Text="{Binding WindowTitle}" Grid.Column="0" Width="Auto" Foreground="White" FontSize="16" TextWrapping="Wrap"></TextBlock>

                            <Grid Margin="0" Height="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding ProcessName}" Grid.Column="0" Width="Auto" Foreground="White" FontSize="16" TextWrapping="Wrap"></TextBlock>
                                <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="8, 0, 0, 0">
                                </StackPanel>
                                <Button x:Name="RegistAppDeleteButton" Grid.Column="2" Content="削除" Width="64" Height="20" Margin="8, 0, 0, 0" VerticalAlignment="Center" Click="RegistAppDeleteButton_Click"/>
                            </Grid>
                        </StackPanel>

                        <Border Width="Auto" Height="2" Background="White"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <ListBox ItemsSource="{Binding RunAppList}" Grid.Column="2" Background="#FF404040" 
                x:Name="RunAppListBox" Height="Auto" Width="Auto" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="RunAppListBox_SelectionChanged">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Margin="8, 0, 8, 0">
                            <TextBlock Text="{Binding WindowTitle}" Grid.Column="0" Width="Auto" Foreground="White" FontSize="16" TextWrapping="Wrap"></TextBlock>

                            <Grid Margin="0" Height="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding ProcessName}" Grid.Column="0" Width="Auto" Foreground="White" FontSize="16" TextWrapping="Wrap"></TextBlock>
                                <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="8, 0, 0, 0">
                                </StackPanel>
                                <Button x:Name="RunAppDeleteButton" Grid.Column="2" Content="削除" Width="64" Height="20" Margin="8, 0, 0, 0" VerticalAlignment="Center" Click="RunAppDeleteButton_Click"/>
                            </Grid>
                        </StackPanel>

                        <Border Width="Auto" Height="2" Background="White"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
